rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isRole(role) {
      return getUserData().role == role;
    }

    function isTeamMember(teamId) {
      return getUserData().teamId == teamId;
    }
    
    // USERS
    match /users/{userId} {
      // Anyone can create their own user profile document.
      allow create: if isSignedIn();
      // Users can only read their own profile. Core/Semi-core can read any profile.
      allow read: if isSignedIn() && (isUser(userId) || isRole('Core') || isRole('Semi-core'));
      // Users can update their own profile. Core team can update any profile (e.g., to change role).
      allow update: if isSignedIn() && (isUser(userId) || isRole('Core'));
      // Only Core team can delete users.
      allow delete: if isSignedIn() && isRole('Core');
    }

    // TEAMS
    match /teams/{teamId} {
      // Users can read data only for their own team. Core/Semi-core can read all teams.
      allow read: if isSignedIn() && (isTeamMember(teamId) || isRole('Core') || isRole('Semi-core'));
      // Only Core team can create, update, or delete teams.
      allow write: if isSignedIn() && isRole('Core');
    }

    // TASKS
    match /tasks/{taskId} {
      // Users can read tasks if they are a member of the task's team, or if the task is assigned to them.
      // Core/Semi-core can read all tasks.
      allow read: if isSignedIn() && (
        isRole('Core') ||
        isRole('Semi-core') ||
        isTeamMember(resource.data.teamId) ||
        isUser(resource.data.assignee.uid)
      );

      // Creating tasks: Core, Semi-core, and Heads can create.
      allow create: if isSignedIn() && (isRole('Core') || isRole('Semi-core') || isRole('Head'));

      // Updating tasks: 
      // Core/Semi-core/Heads can update any task in their realm of control.
      // Volunteers can only update the status of tasks assigned to them.
      allow update: if isSignedIn() && (
        isRole('Core') || 
        isRole('Semi-core') ||
        (isRole('Head') && isTeamMember(resource.data.teamId)) ||
        (isRole('Volunteer') && isUser(resource.data.assignee.uid) && request.resource.data.keys().hasOnly(['status', 'updatedAt']))
      );

      // Deleting tasks: Only Core, Semi-core, and Heads of the respective team can delete.
      allow delete: if isSignedIn() && (isRole('Core') || isRole('Semi-core') || (isRole('Head') && isTeamMember(resource.data.teamId)));
    }

    // FILES
    match /files/{fileId} {
       // Users can read file metadata if they are part of the team. Core/Semi-core can read all.
      allow read: if isSignedIn() && (isRole('Core') || isRole('Semi-core') || isTeamMember(resource.data.teamId));
      // Any signed-in user can create (upload) a file. Let's scope this to team members.
      allow create: if isSignedIn() && (isTeamMember(request.resource.data.teamId) || isRole('Core') || isRole('Semi-core'));
      // Only Core/Semi-core or the user who uploaded the file can delete it.
      allow delete: if isSignedIn() && (isRole('Core') || isRole('Semi-core') || isUser(resource.data.uploadedBy));
      // No updates to file metadata allowed for now to keep it simple.
      allow update: if false;
    }

    // MESSAGES
    match /messages/{messageId} {
      // Users can read messages if they are part of the team or if it's the common chat
      // Core/Semi-core can read all messages
      allow read: if isSignedIn() && (
        isRole('Core') || 
        isRole('Semi-core') || 
        resource.data.teamId == 'common' ||
        isTeamMember(resource.data.teamId)
      );
      // Users can create messages if they are part of the team or if it's the common chat
      // Core/Semi-core can create messages in any team
      allow create: if isSignedIn() && (
        isRole('Core') || 
        isRole('Semi-core') || 
        request.resource.data.teamId == 'common' ||
        isTeamMember(request.resource.data.teamId)
      );
      // Only Core/Semi-core can delete messages
      allow delete: if isSignedIn() && (isRole('Core') || isRole('Semi-core'));
      // No updates to messages allowed
      allow update: if false;
    }
  }
}
